#importing alphabet
import string

alphabet = string.ascii_lowercase #abcdefghijklmnsopqrstuvwxyz
alphabet = string.ascii_uppercase #ABCDEFGHIJKLMNSOPQESTUVWXYZ



#functions go here
def banner (): 
